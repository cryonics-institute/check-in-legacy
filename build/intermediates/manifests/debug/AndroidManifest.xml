<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.areyouok"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />

    <supports-screens
        android:compatibleWidthLimitDp="320"
        android:largestWidthLimitDp="320" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />

    <android:uses-permission android:name="android.permission.READ_CALL_LOG" />

    <application
        android:name="com.areyouok.AreYouOKApp"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.areyouok.MenuActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.areyouok.WizardActivity"
            android:label="Welcome"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.areyouok.SettingsActivity"
            android:label="Settings"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.areyouok.ChooseContactsActivity"
            android:label="My Contacts"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.areyouok.AlarmSettingsActivity"
            android:label="Alarm Settings"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.areyouok.AlarmActivity"
            android:label="Alarm"
            android:screenOrientation="portrait" >
        </activity>

        <receiver android:name="com.areyouok.OnBootReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.areyouok.AlarmReceiver" >
        </receiver>
    </application>

</manifest>